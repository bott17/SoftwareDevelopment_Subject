<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ds.practica2.juegopreguntas.activities.LanzadorActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Principal"
        android:id="@+id/bottonPrincipal"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/textTituloPregunta" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pregunta"
        android:id="@+id/botonPregunta"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/bottonPrincipal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contestar"
        android:id="@+id/botoContestar"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/botonPregunta"
        android:layout_marginStart="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Titulo pregunta"
        android:id="@+id/textTituloPregunta"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/bottonPrincipal"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pregunta1"
        android:id="@+id/botonPregunta1"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/textTituloPregunta"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pregunta2"
        android:id="@+id/botonpregunta2"
        android:layout_below="@+id/botonPregunta1"
        android:layout_alignStart="@+id/botonPregunta1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pregunta3"
        android:id="@+id/botonPregunta3"
        android:layout_below="@+id/botonpregunta2"
        android:layout_alignStart="@+id/botonpregunta2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pregunta4"
        android:id="@+id/botonPregunta4"
        android:layout_below="@+id/botonPregunta3"
        android:layout_alignStart="@+id/botonPregunta3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="dificultad"
        android:id="@+id/textViewDificultad"
        android:layout_alignBottom="@+id/bottonPrincipal"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
